{
    "name": "ttn-sample",
    "version": "0.0.1",
    "description": "",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc -p tsconfig-build.json",
        "start": "node dist/main.js",
        "start-dev": "ts-node src/main.ts --inspect=0.0.0.0:9229",
        "start-watch": "nodemon -L src/main.ts --inspect=0.0.0.0:9229 --exec ts-node",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
        "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
        "test": "jest --watchAll",
        "test:coverage": "jest --watchAll --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test-ci": "jest --collect-coverage",
        "publish-code-coverage": "codecov",
        "validate": "npm run format && npm run formatTest && npm run lint && npm run test-ci && npm run build",
        "prepare": "[ \"$NODE_ENV\" = production ] && exit 0;husky install",
        "pretty-quick": "pretty-quick --staged"
    },
    "author": "juanjofp, francescorivola",
    "repository": {
        "type": "git",
        "url": "git@github.com:Juanjofp/ttn-webhook.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/convict": "^6.1.1",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.10",
        "@types/node-fetch": "^3.0.2",
        "@types/pino": "^7.0.4",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "codecov": "^3.8.2",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "jest-watch-typeahead": "^1.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "convict": "^6.2.1",
        "fastify": "^3.27.0",
        "make-promises-safe": "^5.1.0",
        "pino": "^7.6.4"
    }
}
